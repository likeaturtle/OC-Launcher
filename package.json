{
  "name": "opencode-launcher",
  "version": "1.0.0",
  "description": "OpenCode Launcher - Standalone OpenCode environment manager",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --dir",
    "clean:userdata:mac": "rm -rf ~/Library/Application\\ Support/opencode-launcher",
    "clean:userdata:win": "if exist %APPDATA%\\opencode-launcher rmdir /s /q %APPDATA%\\opencode-launcher",
    "clean:userdata": "node -e \"const fs=require('fs');const path=require('path');const dir=path.join(process.platform==='win32'?process.env.APPDATA:path.join(require('os').homedir(),'Library/Application Support'),'opencode-launcher');if(fs.existsSync(dir))fs.rmSync(dir,{recursive:true,force:true});\"",
    "predist": "npm run clean:userdata",
    "predist:mac-arm64": "npm run clean:userdata",
    "predist:mac-x64": "npm run clean:userdata",
    "predist:mac-all": "npm run clean:userdata",
    "predist:win-x64": "npm run clean:userdata",
    "predist:win-x86": "npm run clean:userdata",
    "predist:win-arm64": "npm run clean:userdata",
    "predist:win-all": "npm run clean:userdata",
    "dist": "electron-builder",
    "dist:mac-arm64": "electron-builder --mac --arm64",
    "dist:mac-x64": "electron-builder --mac --x64",
    "dist:mac-all": "electron-builder --mac --arm64 --x64",
    "dist:win-x64": "electron-builder --win --x64",
    "dist:win-x86": "electron-builder --win --ia32",
    "dist:win-arm64": "electron-builder --win --arm64",
    "dist:win-all": "electron-builder --win --x64 --ia32 --arm64"
  },
  "keywords": ["opencode", "launcher", "electron"],
  "author": "",
  "license": "AGPL-3.0",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "tar": "^6.2.0",
    "adm-zip": "^0.5.10"
  },
  "build": {
    "appId": "com.opencode.launcher",
    "productName": "OpenCode Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "fileAssociations": [],
    "protocols": [],
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-macos-${arch}.${ext}",
      "extraResources": [
        {
          "from": "nodejs_package/node-v22.22.0-darwin-${arch}.tar.gz",
          "to": "nodejs_package"
        }
      ]
    },
    "win": {
      "target": ["nsis", "zip"],
      "artifactName": "${productName}-${version}-windows-${arch}.${ext}",
      "extraResources": [
        {
          "from": "nodejs_package/node-v22.22.0-win-${arch}.zip",
          "to": "nodejs_package"
        }
      ]
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Development"
    },
    "compression": "normal",
    "asar": true,
    "asarUnpack": [],
    "npmRebuild": false,
    "nodeGypRebuild": false
  }
}
