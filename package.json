{
  "name": "opencode-launcher",
  "version": "1.0.0",
  "description": "OpenCode Launcher - Standalone OpenCode environment manager",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": ["opencode", "launcher", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "tar": "^6.2.0",
    "adm-zip": "^0.5.10"
  },
  "build": {
    "appId": "com.opencode.launcher",
    "productName": "OpenCode Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "nodejs_package",
        "to": "nodejs_package",
        "filter": ["**/*"]
      }
    ],
    "fileAssociations": [],
    "protocols": [],
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "nodejs_package/**/*"
    ],
    "npmRebuild": false,
    "nodeGypRebuild": false
  }
}
